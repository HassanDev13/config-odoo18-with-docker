<odoo>
    <record id="view_my_task_tree" model="ir.ui.view">
        <field name="name">my.task.tree</field>
        <field name="model">my.task</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="is_done"/>
            </list>
        </field>
    </record>

    <record id="action_my_tasks" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">my.task</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_my_tasks_root" name="My Tasks" sequence="10"/>
    <menuitem id="menu_my_tasks_list" name="All Tasks" parent="menu_my_tasks_root" action="action_my_tasks"/>
</odoo>